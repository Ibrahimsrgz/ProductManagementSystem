@using ProductManagementSystem.Web.Pages.Currencies
@using ProductManagementSystem.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using ProductManagementSystem.Localization
@inject IHtmlLocalizer<ProductManagementSystemResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Currencies"].Value;
    PageLayout.Content.MenuItemName = ProductManagementSystemMenus.Currencies;
}


<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="CodeFilter" label="@L["Code"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="NumericFilterMin" label="@L["MinNumeric"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="NumericFilterMax" label="@L["MaxNumeric"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="NameFilter" label="@L["Name"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="SymbolFilter" label="@L["Symbol"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="CountryFilter" label="@L["Country"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="ActiveFilter" label="@L["Active"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="OrderFilterMin" label="@L["MinOrder"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="OrderFilterMax" label="@L["MaxOrder"].Value" />
            </abp-column>
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        </abp-row>


        <abp-table striped-rows="true" id="CurrenciesTable">
            <thead>
				<tr>
				    
				    
					<th>@L["Actions"]</th>
					<th>@L["Code"]</th>
					<th>@L["Numeric"]</th>
					<th>@L["Name"]</th>
					<th>@L["Symbol"]</th>
					<th>@L["Country"]</th>
					<th>@L["Active"]</th>
					<th>@L["Order"]</th>

@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>


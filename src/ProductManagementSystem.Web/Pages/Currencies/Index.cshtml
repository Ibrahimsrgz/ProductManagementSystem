@section content_toolbar {
    <abp-button id="ExportToExcelButton" text="@L["ExportToExcel"].Value" icon="download" size="Small" button-type="Primary" />
    @if (await Authorization.IsGrantedAsync(ProductManagementSystemPermissions.Currencies.Create))
    {
        <abp-button id="NewCurrencyButton" text="@L["NewCurrency"].Value" icon="plus" size="Small" button-type="Primary" />
    }
